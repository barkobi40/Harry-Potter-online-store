<%- include('layout.ejs'); %>

<style>
    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 50px;
    }

    .login-section {
        flex: 1;
        padding: 40px;
        background-color: #0000007b;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin: 30px;

    }

    .video-section {
        flex: 1;
        margin: 30px;
        margin-bottom: 100px;
    }

    .video-wrapper {
        position: relative;
        overflow: hidden;
        padding-top: 56.25%; 
    }

    .video-wrapper iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

   
    @font-face {
            font-family: 'WizardingFont';
            font-weight: 400;
            src: url('/fonts/Cinzel.ttf');
    }

    .sign-in {
        font-family: 'WizardingFont';
        font-size: 30px; 
        color: white; 
    }
    .label-text {
        font-family: 'WizardingFont';
        font-size: 20px; 
        color: white; 
    }
    .login-button {
        margin-top: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .login-button button,
    .login-button a {
        flex: 1;
        margin: 0 5px;
        padding: 10px;
        text-align: center;
        color: rgb(0, 0, 0);
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
        width: 48%; 
    }
    label{
        font-family: 'WizardingFont';

    }

    a[href="http://localhost:8080/register"]{
        width: 416px !important;
        height: 52px !important;
        z-index: 9999 !important;
    }
    
</style>

<div class="row">
    <section class="col-sm-6 login-section">
        <h1 class="sign-in">
            Already Part of the Wizarding World?<br> Login Here!
        </h1>

        <% if ( typeof message != 'undefined' && message.length > 0 ) { %>
            <div class="alert alert-danger">
                <%= message %>
            </div>
        <% } %>

        <form action="/login" method="post">              
            <div class="form-group">
                <label>
                    Email
                </label>
                <input type="text" class="form-control" name="email"/>
            </div>
            <div class="form-group">
                <label>
                    Password
                </label>
                <input type="password" class="form-control" name="password"/>
            </div>

            <div class="login-button">
            <button type="submit" class="btn-warning btn-lg" style="color: black;">Login</button>

            </div>

            <p><br>Don't have an account? <a href="http://localhost:8080/register">Sign Up Now</a>.</p>

    </form>    
    </section>

     <section class="col-sm-6 video-section">
        <div class="video-wrapper">
            <iframe width="560" height="315"  source src="/assets/MovieT.mp4" type="video/mp4" autoplay>
            
        </div>
    </section>

</div>

</body>
</html>

<script>
    $(document).ready(function () {   
        $("#footer").hide();
    });
</script>
