<%- include('layout.ejs'); %>

<style>
            @font-face {
                    font-family: 'NewTo';
                    font-weight: 400;
                    src: url('/fonts/Cinzel.ttf');
            }
        
            .sign-in {
                font-family: 'NewTo';
                font-size: 30px;
                color: white;
            }
            label{
                font-family: 'NewTo';

            }
            .signup-button {
            text-align: center;
            margin-top: 20px; 
            }
            p{
                text-align: center;
            margin-top: 20px; 
            }
     </style>
    <section class="col-sm-4 col-sm-offset-3" style="margin: auto;">
        <h1>
            <span class="sign-in">
            New to the Wizarding World? <br> Join Us Now!
             </span>
                </h1>
        
        <% if ( message.length > 0 ) { %>
            <div class="alert alert-danger">
                <%= message %>
            </div>
        <% } %>
      
        <form action="/register" method="post" >
            <div class="form-group">
                <label>
                    Name
                </label>
                <input type="text" class="form-control" name="name" value="<%= name %>"/> 
            </div>        
            <div class="form-group">
                <label>
                    Email
                </label>
                <input type="text" class="form-control" name="email" value="<%= email %>"/>
            </div>
            <div class="form-group">
                <label>
                    Password
                </label>
                <input type="password" class="form-control" name="password" value="<%= password %>"/>
            </div>
            <div class="form-group">
                <label>
                    Role
                </label>
                <select class="form-control" name="role">
                    <option value="">Choose role</option>
                    <option value="provider">Wizard</option>
                    <option value="fan">Muggle</option>
                </select>            
            </div>
            <div class="signup-button">
            <button type="submit" class="btn btn-warning btn-lg">Signup</button>
            </div>
        </form>
    
        <hr>
        <p>
            Already have an account? 
            <a href="/login">
                Login
            </a>
        </p>       
    </section> 

</body>
</html>

<script>
    $(document).ready(function () {   
        $("#footer").hide();
    })
</script>